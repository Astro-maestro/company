<!DOCTYPE html>
<html lang="en">
<%- include('../../layouts/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <%- include('../../layouts/navbar.ejs') %>
        <%- include('../../layouts/sidebar.ejs') %>

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Dashboard/Edit-Course</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                              <li class="breadcrumb-item"><a href="#">Course</a></li>
                              <li class="breadcrumb-item active">Edit-Course</li>
                            </ol>
                          </div>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <form action="/course/edit/<%= course._id %>" method="POST" >
                        <div class="form-group">
                            <label for="title">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= course.name %>" required>
                        </div>

                        <div class="form-group">
                            <label for="subtitle">Price</label>
                            <input type="text" class="form-control" id="price" name="price" value="<%= course.price %>" required>
                        </div>

                        <div class="form-group"></div>
                            <label for="details">Details</label>
                            <input type="text" class="form-control" id="details" name="details" value="<%= course.details %>" required>
                        </div>

                        <button type="submit" class="btn btn-primary mt-4 ml-2">Update Course</button>
                    </form>
                </div>
            </section>
        </div>

        <%- include('../../layouts/footer.ejs') %>
    </div>
</body>

</html>
