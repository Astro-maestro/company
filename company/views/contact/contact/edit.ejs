<!DOCTYPE html>
<html lang="en">
<%- include('../../layouts/head.ejs') %>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <%- include('../../layouts/navbar.ejs') %>
        <%- include('../../layouts/sidebar.ejs') %>

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Dashboard/Edit-Contact</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Contact</a></li>
                                <li class="breadcrumb-item active">Edit-Contact</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <form action="/contact/edit/<%= contact._id %>" method="POST">
                        <!-- Location field -->
                        <div class="form-group">
                            <label for="location">Location</label>
                            <input type="text" class="form-control" id="location" name="location" value="<%= contact.location %>" required>
                        </div>

                        <!-- Emails field -->
                        <div class="form-group">
                            <label for="emails">Emails (comma-separated): </label>
                            <input type="text" class="form-control" id="emails" name="emails" value="<%= contact.emails.join(', ') %>" required>
                        </div>

                        <!-- Calls field -->
                        <div class="form-group">
                            <label for="calls">Calls (comma-separated): </label>
                            <input type="text" class="form-control" id="calls" name="calls" value="<%= contact.calls.join(', ') %>" required>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary mt-4 ml-2">Update Contact</button>
                    </form>
                </div>
            </section>
        </div>

        <%- include('../../layouts/footer.ejs') %>
    </div>
</body>
</html>
